    package="com.mobdeve.s13.group2.financify">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Financify">
        <activity android:name=".CashflowUpdateEntryActivity"></activity>
        <activity android:name=".CashflowAddEntryActivity" />
        <activity android:name=".CashflowUpdateAccountActivity" />
        <activity android:name=".CashflowAddAccountActivity" />
        <activity android:name=".CashflowAccountActivity" />
        <activity android:name=".CashflowHomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>