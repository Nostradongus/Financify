<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Financify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/financify_light_blue</item>
        <item name="colorPrimaryVariant">@color/financify_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/financify_light_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- style for DatePicker dialog -->
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/financify_dark_blue</item>
        <item name="colorPrimaryDark">@color/financify_dark_blue</item>
        <item name="colorAccent">@color/financify_dark_blue</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonStyle</item>
    </style>

    <!-- style for DatePicker button -->
    <style name="DatePickerTheme.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/financify_dark_blue</item>
    </style>

    <!-- style for DatePicker dialog in spinner mode -->
    <style name="DatePickerSpinner" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonStyle</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/financify_dark_blue</item>
        <item name="android:width">@dimen/browser_actions_context_menu_max_width</item>
    </style>

    <!-- for setting DatePicker to spinner mode -->
    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>